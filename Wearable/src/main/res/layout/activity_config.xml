<androidx.wear.widget.drawer.WearableDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".config.WatchFaceSelectionActivity"
    tools:deviceIds="wear">

    <androidx.wear.widget.WearableRecyclerView
        android:id="@+id/wearable_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:paddingTop="@dimen/activity_config_top_padding"
        android:paddingBottom="@dimen/activity_config_bottom_padding"
        android:paddingStart="@dimen/activity_config_sides_padding"
        android:paddingEnd="@dimen/activity_config_sides_padding"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <requestFocus />

    </androidx.wear.widget.WearableRecyclerView>

    <androidx.wear.widget.drawer.WearableNavigationDrawerView
        android:id="@+id/top_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        app:navigationStyle="singlePage" />
</androidx.wear.widget.drawer.WearableDrawerLayout>
